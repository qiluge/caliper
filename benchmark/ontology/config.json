{
  "blockchain": {
    "type": "ontology",
    "config": "benchmark/ontology/ontology.json"
  },
  "command": {
    "start": "./start.sh",
    "end": "pkill -9 ontology"
  },
  "test": {
    "name": "ontology test",
    "description": "This is ontology tps test!",
    "clients": {
      "type": "local",
      "number": 2
    },
    "rounds": [
      {
        "label": "transferONG",
        "txNumber": [
          10000
        ],
        "rateControl": [
          {
            "type": "fixed-rate",
            "opts": {
              "tps": 2500
            }
          }
        ],
        "arguments": {
          "sendTx": true
        },
        "callback": "benchmark/ontology/transfer.js"
      },
      {
        "label": "invokeContract",
        "txNumber": [
          10000
        ],
        "rateControl": [
          {
            "type": "fixed-rate",
            "opts": {
              "tps": 2500
            }
          }
        ],
        "arguments": {
          "invokeContract": true
        },
        "callback": "benchmark/ontology/invoke.js"
      }
    ]
  },
  "monitor": {
    "type": [
      "process"
    ],
    "process": [
      {
        "command": "./ontology",
        "arguments": "--testmode,--networkid,3,--gaslimit,0,--gasprice,0,--rest,--localrpc",
        "multiOutput": "avg"
      }
    ],
    "interval": 1
  }
}